<div>
  <form action="/boardgames" method="PUT">
    <p>
      Name:
    </p>
    <p>
      <input type="text" name="name" value="<%= game.name %>"/>
    </p>
    <p>
      Description:
    </p>
    <p>
      <textarea name="description"><%= game.description %></textarea>
    </p>
    <p>
      <button type="submit">Save</button>
    </p>
  </form>
</div>
